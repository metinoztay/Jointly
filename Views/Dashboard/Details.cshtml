    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewMedia(filePath, type) {
            const modal = new bootstrap.Modal(document.getElementById('mediaModal'));
            const modalImage = document.getElementById('modalImage');
            const modalVideo = document.getElementById('modalVideo');
            
            if (type === 'image') {
                modalImage.src = filePath;
                modalImage.style.display = 'block';
                modalVideo.style.display = 'none';
            } else {
                modalVideo.src = filePath;
                modalVideo.style.display = 'block';
                modalImage.style.display = 'none';
            }
            
            modal.show();
        }

        function downloadMessage(id, message, senderName, date) {
            const content = `GÃ¶nderen: ${senderName}\nTarih: ${date}\n\n${message}`;
            const blob = new Blob([content], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `mesaj_${id}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Media delete functionality
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.delete-media-btn');
            
            deleteButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const mediaId = this.getAttribute('data-media-id');
                    const eventId = this.getAttribute('data-event-id');
                    
                    if (!confirm('Bu medyayÄ± silmek istediÄŸinizden emin misiniz?')) {
                        return;
                    }
                    
                    try {
                        const response = await fetch(`/Dashboard/DeleteMedia/${mediaId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        });
                        
                        if (response.ok) {
                            // Remove the media card from DOM
                            const mediaCard = this.closest('.col-6');
                            mediaCard.style.transition = 'opacity 0.3s ease';
                            mediaCard.style.opacity = '0';
                            
                            setTimeout(() => {
                                mediaCard.remove();
                                
                                // Update media count badge
                                const mediaBadge = document.querySelector('#media-tab .badge');
                                if (mediaBadge) {
                                    const currentCount = parseInt(mediaBadge.textContent);
                                    mediaBadge.textContent = currentCount - 1;
                                }
                                
                                // Check if there are no more media items
                                const remainingMedia = document.querySelectorAll('#media .col-6').length;
                                if (remainingMedia === 0) {
                                    const mediaTab = document.querySelector('#media');
                                    mediaTab.innerHTML = `
                                        <div class="text-center py-5">
                                            <i class="bi bi-images display-1 text-muted opacity-25 mb-3"></i>
                                            <h5 class="text-muted">HenÃ¼z medya yÃ¼klenmemiÅŸ</h5>
                                            <p class="text-muted small">KatÄ±lÄ±mcÄ±lar etkinlik sayfasÄ±ndan fotoÄŸraf ve video yÃ¼kleyebilir</p>
                                        </div>
                                    `;
                                }
                                
                                showToast('Medya baÅŸarÄ±yla silindi', 'success');
                            }, 300);
                        } else {
                            showToast('Silme iÅŸlemi baÅŸarÄ±sÄ±z oldu', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showToast('Bir hata oluÅŸtu', 'error');
                    }
                });
            });
        });

        // Message delete functionality
        document.addEventListener('DOMContentLoaded', function() {
            const deleteMessageButtons = document.querySelectorAll('.delete-message-btn');
            
            deleteMessageButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const messageId = this.getAttribute('data-message-id');
                    
                    if (!confirm('Bu mesajÄ± silmek istediÄŸinizden emin misiniz?')) {
                        return;
                    }
                    
                    try {
                        const response = await fetch(`/Dashboard/DeleteMessage/${messageId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        });
                        
                        if (response.ok) {
                            // Remove the message card from DOM
                            const messageCard = this.closest('.col-md-6');
                            messageCard.style.transition = 'opacity 0.3s ease';
                            messageCard.style.opacity = '0';
                            
                            setTimeout(() => {
                                messageCard.remove();
                                
                                // Update message count badge
                                const messageBadge = document.querySelector('#messages-tab .badge');
                                if (messageBadge) {
                                    const currentCount = parseInt(messageBadge.textContent);
                                    messageBadge.textContent = currentCount - 1;
                                }
                                
                                // Check if there are no more messages
                                const remainingMessages = document.querySelectorAll('#messages .col-md-6').length;
                                if (remainingMessages === 0) {
                                    const messagesTab = document.querySelector('#messages');
                                    messagesTab.innerHTML = `
                                        <div class="text-center py-5">
                                            <i class="bi bi-chat-left-text display-1 text-muted opacity-25 mb-3"></i>
                                            <h5 class="text-muted">HenÃ¼z mesaj yok</h5>
                                            <p class="text-muted small">KatÄ±lÄ±mcÄ±lar etkinlik sayfasÄ±ndan mesaj bÄ±rakabilir</p>
                                        </div>
                                    `;
                                }
                                
                                showToast('Mesaj baÅŸarÄ±yla silindi', 'success');
                            }, 300);
                        } else {
                            showToast('Silme iÅŸlemi baÅŸarÄ±sÄ±z oldu', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showToast('Bir hata oluÅŸtu', 'error');
                    }
                });
            });
        });

        // Voice note delete functionality
        document.addEventListener('DOMContentLoaded', function() {
            const deleteVoiceButtons = document.querySelectorAll('.delete-voice-btn');
            
            deleteVoiceButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const voiceId = this.getAttribute('data-voice-id');
                    
                    if (!confirm('Bu sesli mesajÄ± silmek istediÄŸinizden emin misiniz?')) {
