                            setTimeout(() => {
                                voiceCard.remove();
                                
                                // Update voice notes count badge
                                const voiceBadge = document.querySelector('#voice-tab .badge');
                                if (voiceBadge) {
                                    const currentCount = parseInt(voiceBadge.textContent);
                                    voiceBadge.textContent = currentCount - 1;
                                }
                                
                                // Check if there are no more voice notes
                                const remainingVoices = document.querySelectorAll('#voice .col-md-6').length;
                                if (remainingVoices === 0) {
                                    const voiceTab = document.querySelector('#voice');
                                    voiceTab.innerHTML = `
                                        <div class="text-center py-5">
                                            <i class="bi bi-mic-fill display-1 text-muted opacity-25 mb-3"></i>
                                            <h5 class="text-muted">HenÃ¼z sesli mesaj yok</h5>
                                            <p class="text-muted small">KatÄ±lÄ±mcÄ±lar etkinlik sayfasÄ±ndan sesli mesaj bÄ±rakabilir</p>
                                        </div>
                                    `;
                                }
                                
                                showToast('Sesli mesaj baÅŸarÄ±yla silindi', 'success');
                            }, 300);
                        } else {
                            showToast('Silme iÅŸlemi baÅŸarÄ±sÄ±z oldu', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showToast('Bir hata oluÅŸtu', 'error');
                    }
                });
            });
        });

        function showToast(message, type) {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            toast.innerHTML = `
                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 150);
            }, 3000);
        }
    </script>
