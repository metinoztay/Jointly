@model IEnumerable<Jointly.Models.Event>
@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jointly</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="dashboard-page min-vh-100">
        <!-- Navbar -->
        <nav class="navbar navbar-expand navbar-light bg-white border-bottom">
            <div class="container px-4">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/logo.png" alt="Jointly" height="35" class="me-2" />
                    <span class="fw-bold text-gradient fs-4">Jointly</span>
                </a>
                <div class="d-flex align-items-center">
                    <span class="me-3 text-muted">ðŸ‘‹ <strong>@ViewBag.UserName</strong></span>
                    <a href="/" class="btn btn-sm btn-outline-secondary">Ã‡Ä±kÄ±ÅŸ</a>
                </div>
            </div>
        </nav>

        <div class="container py-5" style="max-width: 1200px;">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="fw-bold">Etkinliklerim</h2>
                    <p class="text-muted">TÃ¼m etkinliklerinizi buradan yÃ¶netebilirsiniz</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Create")" class="btn btn-primary px-4">
                        <i class="bi bi-plus-circle me-2"></i>Yeni Etkinlik
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted opacity-50"></i>
                    <h4 class="mt-4 text-muted">HenÃ¼z etkinlik oluÅŸturmadÄ±nÄ±z</h4>
                    <p class="text-muted">Ä°lk etkinliÄŸinizi oluÅŸturmak iÃ§in yukarÄ±daki butona tÄ±klayÄ±n</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="event-card card-soft h-100">
                                @if (!string.IsNullOrEmpty(item.HeaderImagePath))
                                {
                                    <img src="@item.HeaderImagePath" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover; border-radius: 20px 20px 0 0;">
                                }
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="fw-bold mb-2">@item.Title</h5>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">SonlandÄ±rÄ±ldÄ±</span>
                                            }
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-link text-dark" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="@Url.Action("Edit", new { id = item.Id })">
                                                    <i class="bi bi-pencil me-2"></i>DÃ¼zenle
                                                </a></li>
                                                @if (item.IsActive)
                                                {
                                                    <li>
                                                        <form asp-action="EndEvent" asp-route-id="@item.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="dropdown-item text-warning" onclick="return confirm('Bu etkinliÄŸi sonlandÄ±rmak istediÄŸinizden emin misiniz?')">
                                                                <i class="bi bi-stop-circle me-2"></i>SonlandÄ±r
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Bu etkinliÄŸi silmek istediÄŸinizden emin misiniz?')">
                                                            <i class="bi bi-trash me-2"></i>Sil
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    
                                    <p class="text-muted small mb-3">@item.Description</p>
                                    
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center text-muted small mb-2">
                                            <i class="bi bi-calendar3 me-2"></i>
                                            @item.EventDate.ToString("dd MMMM yyyy, HH:mm")
                                        </div>
                                        <div class="d-flex align-items-center text-muted small">
                                            <i class="bi bi-geo-alt me-2"></i>
                                            @item.Location
                                        </div>
                                    </div>

                                    <div class="qr-code-box mt-3 p-3 bg-light rounded text-center">
                                        <small class="text-muted d-block mb-2">QR Kod</small>
                                        @{
                                            var qrCodeBase64 = Jointly.Helpers.QRCodeHelper.GenerateQRCodeBase64(item.QRCode);
                                        }
                                        <img src="data:image/png;base64,@qrCodeBase64" alt="QR Code" style="max-width: 150px;" class="img-fluid">
                                        <p class="text-muted small mt-2 mb-0">@item.QRCode</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <style>
        .dashboard-page {
            background: linear-gradient(135deg, var(--bg-light) 0%, var(--white) 100%);
        }

        .event-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(183, 110, 121, 0.15) !important;
        }

        .qr-code-box {
            border: 2px dashed var(--primary-color);
        }
    </style>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
